{
    "Factorio": {
        "Executable":
        {
            "DownloadDirectory": "~/.cache/factoriod/downloads",
            "ExecutableDirectory": "bin/x64",
            "ExecutableName": "factorio",
            "Version": "latest",
            "UseExperimental": true
        },
        "Configuration":
        {
            "RootDirectory": "~/.config/factoriod",
            "ServerSettingsPath": "server-settings.json",
            "ServerWhitelistPath": "server-whitelist.json",
            "ServerBanlistPath": "server-banlist.json",
            "ServerAdminlistPath": "server-adminlist.json"
        },
        "Saves":
        {
            "Save": "save2.zip"
        },
        "MapGeneration":
        {
            "RootDirectory": "~/.config/factoriod",
            "MapGenSettingsPath": "map-gen-settings.json",
            "MapGenSeed": null,
            "MapSettingsPath": "map-settings.json"
        },
        
        "ModsRootDirectory": "~/.config/factoriod/mods"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Factoriod": "Debug"
        }
    }
}
